<div class="row">
  <h3 class="page-header">Servers</h3>

  <form class="admin" action="/admin">
    <button type="submit">Back to Admin</button>
  </form>
</div>

<div class="row servers">
  <ul>
    <% @servers.each do |server| %>
      <li>
        <a href="/servers/<%= server.id %>">
          <button>
            <%= server.name %>
          </button>
        </a>
      </li>
    <% end %>

  </ul>
</div>

<div class="row admin-forms">
  <form class="admin" action="/servers/new">
    <button type="submit">Add New Server</button>
  </form>
</div>
