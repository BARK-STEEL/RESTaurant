<div class="row">
  <h3 class="page-header">Servers</h3>


</div>

<div class="servers">
  <div class="row">
    <ul>
      <% @servers.each_with_index do |server, index| %>
        <div class="six columns">
          <li>
            <a href="/servers/<%= server.id %>">
              <button>
                <%= server.name %>
              </button>
            </a>
          </li>
        </div>

        <%if (index+1)%2==0%>
          </div>
          <div class="row">
        <%end%>
      <% end %>
    </ul>
  </div>
</div>

<div class="row server-show">
  <form class="admin" action="/servers/new">
    <button type="submit">New</button>
  </form>
  <form class="admin" action="/admin">
    <button type="submit">Admin</button>
  </form>
</div>
