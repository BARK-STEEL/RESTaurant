<div class="row">
  <h3 class="page-header">Edit Server Info</h3>

  <form class="admin" action="/servers/<%=@server.id%>">
    <button type="submit">Back</button>
  </form>
</div>

<div class="row admin-forms">
  <form class="" action="/servers/<%= @server.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <input type="text" name="server[name]" value="<%= @server.name %>">
    <input type="text" name="server[phone_number]" value="<%= @server.phone_number %>"><br/>

    <button type="submit">Submit</button>

    <form class="" action="/servers/<%= @server.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button type="submit">Delete Server</button>
    </form>

  </form>
</div>
