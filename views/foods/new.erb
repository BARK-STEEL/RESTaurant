<div class="row">
  <h3 class="page-header">Add Menu Item</h3>

  <form class="admin" action="/foods">
    <button type="submit">Menu</button>
  </form>
</div>

<div class="row admin-forms">
  <form class="" action="/foods" method="post">
    <input id="food-name" type="text" name="food[name]" placeholder="name" required>
    <select name="food[course]">
      <option>Course</option>
      <% @courses.each do |course|%>
      <option value="<%= course %>">
        <%= course %>
      </option>
      <% end %>
    </select>

    <select name="food[allergens]">
      <option>Allergens</option>
      <% @allergens.each do |allergen|%>
      <option value="<%= allergen %>">
        <%= allergen %>
      </option>
      <% end %>
    </select>

    <input  id="food-price" type="text" name="food[price]" placeholder="price" required><br/>

    <button id="food_submit" type="button">Submit</button>
    <input id="food_submit_handler" type="submit" style="display:none">

  </form>
</div>
