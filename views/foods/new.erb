<div class="row">
  <h3 class="page-header">Add Menu Item</h3>

  <form class="admin" action="/foods">
    <button type="submit">Menu</button>
  </form>
</div>

<div class="row admin-forms">
  <form class="" action="/foods" method="post">
    <input type="text" name="food[name]" placeholder="name">
    <select name="food[course]">
      <option>Course</option>
      <% @courses.each do |course|%>
      <option value="<%= course %>">
        <%= course %>
      </option>
      <% end %>
    </select>

    <select name="food[allergens]">
      <option>Allergens</option>
      <% @allergens.each do |allergen|%>
      <option value="<%= allergen %>">
        <%= allergen %>
      </option>
      <% end %>
    </select>

    <input type="text" name="food[price]" placeholder="price"><br/>

    <button type="submit">Submit</button>

  </form>
</div>
