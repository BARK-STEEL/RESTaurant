<div class="row">
  <h2 class="page-header">Add Reservation for <%= @formattedDate %></h2>

  <form class="" action="/parties/date" method="get">
    <input type="hidden" name="reservation_date" value="<%= @date %>"><br/>
    <button type="submit">Reservations</button>
  </form>

</div>

<div class="row"><h2>Table Number: <%= @table_number %></h2>
  </div>
<div class="row party-forms">
  <form class="" action="/parties" method="post">
  <input type="hidden" name="party[reservation_date]" value="<%= @date %>">
  Time: <input id="res-time" class="timepicker" type="text" name="party[reservation_time]" placeholder="Time"><br/>

  Server: <select name="party[server_id]">
    <% @servers.each do |server|%>
    <option value="<%= server.id %>">
      <%= server.name %>
    </option>
    <% end %>
  </select><br/>

    Guests:<input id="res-guests" type="text" name="party[number_seats]" placeholder="Number of guests"><br/>

    <input type="hidden" name="party[table_number]" value="<%= @table_number%>">

    <input type="hidden" name="party[status]" value="upcoming">

    <button id="res_submit" type="button">Submit</button>
    <input id="res_submit_handler" type="submit" style="display:none">

  </form>
</div>
